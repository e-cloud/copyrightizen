{
  "name": "copyrightizen",
  "version": "1.0.0",
  "description": "A tool generates designated copyright notice to target files with scope support like Intellij IDEs.",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/e-cloud/copyrightizen.git"
  },
  "keywords": [
    "copyright",
    "generate",
    "license"
  ],
  "author": "e-cloud <saintscott119@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/e-cloud/copyrightizen/issues"
  },
  "homepage": "https://github.com/e-cloud/copyrightizen#readme",
  "main": "index.js",
  "scripts": {
    "t": "jest",
    "test": "jest",
    "test:watch": "jest --watch",
    "cm": "git-cz",
    "precommit": "lint-staged",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "release": "standard-version",
    "prettier": "prettier --config-precedence file-override --write",
    "prettier-all": "prettier --loglevel error --config-precedence file-override --write ./**/**.{ts,js,json,scss,css}"
  },
  "dependencies": {
    "@babel/parser": "^7.1.3",
    "@babel/traverse": "^7.1.4",
    "@babel/types": "^7.1.3",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.3",
    "gonzales-pe": "^4.2.3",
    "recast": "^0.16.0",
    "yaml": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "commitizen": "^3.0.4",
    "coveralls": "^3.0.2",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "standard-version": "^4.4.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "{lib,test,.}/*.js": [
      "prettier",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
