{
  "printWidth": 120,
  "tabWidth": 2,
  "singleQuote": true,
  "semi": false,
  "trailingComma": "all",
  "overrides": [
    {
      "files": "**/*.ts",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "**/*.js",
      "options": {
        "parser": "babylon"
      }
    },
    {
      "files": "**/*.json",
      "options": {
        "parser": "json"
      }
    },
    {
      "files": [".prettierrc", ".stylelintrc", ".lintstagedrc"],
      "options": {
        "parser": "json"
      }
    }
  ]
}
